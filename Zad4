# -*- coding: utf-8 -*-

vvod_str = str(input('Vvedite stroku\n')).split(' ')

print('Slova dlinnee 7 simvolov:\n')

for i in vvod_str:

    if len(i) > 7:

        print(vvod_str.pop(vvod_str.index(i)))

print('Slova dlinnoyu ot 4 do 7 simvolov:\n')

for i in vvod_str:

    if (len(i)>= 4) and (len(i)<=7):

        print(vvod_str.pop(vvod_str.index(i)))

print('Slova menshe 4 simvolov:\n')

for i in vvod_str:

    print(i)
